<lccdd>
  <define>
    <documentation>
      #### Material constants
    </documentation>
    <constant name="FluxEndcapN_collar_rmax" value="326.2*cm"/>
    <constant name="FluxEndcapN_collar_rmin" value="269.0*cm"/>
    <constant name="FluxEndcapN_collar_thickness" value="120.4*cm"/>
    <constant name="FluxEndcapN_oculus_rmax" value="267.0*cm"/>
    <constant name="FluxEndcapN_oculus_rmin" value="213.6*cm"/>
    <constant name="FluxEndcapN_oculus_thickness" value="28.5*cm"/>
    <constant name="FluxEndcapN_rmax" value="267.0*cm"/>
    <constant name="FluxEndcapN_rmin" value="14*cm"/>
    <constant name="FluxEndcapN_thickness" value="10*cm"/>
    <constant name="FluxEndcapN_zmin" value="BackwardServiceGap_zmax"/>

  </define>


  <!-- Define detector -->
  <detectors>
    <documentation>
      ### Backwards (Negative Z) Endcap Hadronic Calorimeter
    </documentation>
    <detector id="FluxEndcapN_ID" name="FluxEndcapN" type="epic_EndcapFluxReturnN" vis="HcalEndcapVis">
      <position x="0" y="0" z="0"/>
      <dimensions zmin="FluxEndcapN_zmin" rmin="FluxEndcapN_rmin" rmax="FluxEndcapN_collar_rmax" />

      <layer material="Steel235" rmin="FluxEndcapN_collar_rmin" rmax="FluxEndcapN_collar_rmax" thickness="FluxEndcapN_collar_thickness" vis="HcalEndcapLayerVis">
      <layer material="Steel235" rmin="FluxEndcapN_oculus_rmin" rmax="FluxEndcapN_oculus_rmax" thickness="FluxEndcapN_oculus_thickness" vis="HcalEndcapLayerVis">
      <layer material="Steel235" rmin="FluxEndcapN_rmin" rmax="FluxEndcapN_rmax" thickness="FluxEndcapN_thickness" vis="HcalEndcapLayerVis">

    </detector>
  </detectors>


</lccdd>
