<lccdd>
  <define>
    <constant name="BeampipeUpstreamStraightLength" value="800.0 * mm"/>
    <constant name="BeampipeDownstreamStraightLength" value="670.0 * mm"/>
    <constant name="BeampipeDownstreamHadronEnd" value="5600.0 * mm"/>
    <constant name="LeptonOutgoingBeampipeThickness" value="2.00 * mm"/>
    <constant name="LeptonIncomingBeampipeThickness" value="1.00 * mm"/>
    <constant name="HadronIncomingBeampipeThickness" value="1.65 * mm"/>
    <constant name="HadronOutgoingBeampipeThickness" value="4.00 * mm"/>
  </define>

  <display>
  </display>

  <detectors>

    <detector id="BeamPipe_ID" name="BeamPipe" type="IP6BeamPipe" vis="BeamPipeVis">
      <type_flags type="DetType_TRACKER + DetType_BEAMPIPE" />
      <beampipe/>
      <IP_pipe
        OD="BeampipeOD"
        wall_thickness="0.757*mm"
        gold_thickness="5*um"
        crossing_angle="CrossingAngle"
        upstream_straight_length="BeampipeUpstreamStraightLength"
        downstream_straight_length="BeampipeDownstreamStraightLength"
      />

      <comment> For upstream beampipe, we subtract the vacuum from the matter </comment>
      <upstream reflect="true"
                place_vacuum="true"
                subtract_vacuum="true"
                subtract_matter="false">
        <outgoing_lepton thickness="LeptonOutgoingBeampipeThickness">
          <vacuum>
            <zplane z="BeampipeUpstreamStraightLength" OD="BeampipeOD - 2* LeptonOutgoingBeampipeThickness"/>
            <zplane z="5000.00 * mm" OD="97.715 * mm - 2* LeptonOutgoingBeampipeThickness"/>
          </vacuum>
          <matter>
            <zplane z="BeampipeUpstreamStraightLength" OD="BeampipeOD"/>
            <zplane z="5000.00 * mm" OD="97.715 * mm"/>
          </matter>
        </outgoing_lepton>
        <incoming_hadron thickness="HadronIncomingBeampipeThickness"
                         crossing_angle="CrossingAngle">
          <!-- avoid overlap with IP beampipe by starting slightly displaced -->
          <vacuum>
            <zplane z="BeampipeUpstreamStraightLength + 0.5 * max(BeampipeOD, 24.714 * mm) * tan(abs(CrossingAngle))"
                    OD="24.714 * mm - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="2690.95 * mm" OD="31.75 * mm - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="2890.35 * mm" OD="31.75 * mm - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="2940.35 * mm" OD="44.45 * mm - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="5000.00 * mm" OD="44.45 * mm - 2* HadronIncomingBeampipeThickness"/>
          </vacuum>
          <matter>
            <zplane z="BeampipeUpstreamStraightLength + 0.5 * max(BeampipeOD, 24.714 * mm) * tan(abs(CrossingAngle))"
                    OD="24.714 * mm"/>
            <zplane z="2690.95 * mm" OD="31.75 * mm"/>
            <zplane z="2890.35 * mm" OD="31.75 * mm"/>
            <zplane z="2940.35 * mm" OD="44.45 * mm"/>
            <zplane z="5000.00 * mm" OD="44.45 * mm"/>
          </matter>
        </incoming_hadron>
      </upstream>

      <comment> For downstream beampipe (where on is inside the vacuum of the other), we subtract the matter from the vacuum, and subtract an additional pipe to create the angled cutout</comment>
      <downstream reflect="false"
                  place_vacuum="true"
                  subtract_vacuum="true"
                  subtract_matter="true">
        <incoming_lepton thickness="LeptonIncomingBeampipeThickness">
            <vacuum>
              <zplane z="670.00 * mm" OD="60.00 * mm"/>
              <zplane z="755.00 * mm" OD="60.00 * mm"/>
              <zplane z="755.00 * mm" OD="62.00 * mm"/>
              <zplane z="4300.00 * mm" OD="62.00 * mm"/>
              <zplane z="4450.00 * mm" OD="44.00 * mm"/>
              <zplane z="4460.00 * mm" OD="44.00 * mm"/>
              <zplane z="4660.00 * mm" OD="54.00 * mm"/>
              <zplane z="5100.00 * mm" OD="54.00 * mm"/>
            </vacuum>
            <matter>
              <zplane z="670.00 * mm" OD="62.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="670.00 * mm + LeptonIncomingBeampipeThickness" OD="62.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="670.00 * mm + LeptonIncomingBeampipeThickness" OD="60.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="755.00 * mm + LeptonIncomingBeampipeThickness" OD="60.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="755.00 * mm + LeptonIncomingBeampipeThickness" OD="62.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="4300.00 * mm" OD="62.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="4450.00 * mm" OD="44.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="4460.00 * mm" OD="44.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="4660.00 * mm" OD="54.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="5100.00 * mm" OD="54.00 * mm + 2* LeptonIncomingBeampipeThickness"/>
            </matter>
        </incoming_lepton>
        <outgoing_hadron thickness="HadronOutgoingBeampipeThickness"
                         axis_intersection="670.0 * mm"
                         horizontal_offset="15.0 * mm"
                         cone_z_end="5000.0 * mm"
                         cone_z_start="870.0 * mm"
                         extension_r="27.5 * mm"
                         extension_z="BeampipeDownstreamHadronEnd - 5000.0 * mm"
                         extension_thickness="HadronIncomingBeampipeThickness"
                         crossing_angle="CrossingAngle">
            <vacuum>
              <zplane z="670.00 * mm" OD="62.00 * mm"/>
              <zplane z="5100.00 * mm" OD="(62.00 + 2 * (5100.00 - 670.00) * tan(abs(CrossingAngle))) * mm"/>
            </vacuum>
            <matter>
              <zplane z="670.00 * mm" OD="62.00 * mm + 2* HadronOutgoingBeampipeThickness"/>
              <zplane z="5100.00 * mm" OD="(62.00 + 2 * (5100.00 - 670.00) * tan(abs(CrossingAngle))) * mm + 2* HadronOutgoingBeampipeThickness"/>
            </matter>
        </outgoing_hadron>
        <additional_subtraction thickness="4.0*mm"
                                crossing_angle="CrossingAngle">
          <!-- these are somewhat arbitrary to get the right hole shape -->
            <vacuum>
              <zplane z="870.00 * mm" OD="36.61 * mm - 2* HadronOutgoingBeampipeThickness"/>
              <zplane z="4484.25 * mm" OD="120.00 * mm - 2* HadronOutgoingBeampipeThickness"/>
            </vacuum>
            <matter>
              <zplane z="670.00 * mm" OD="32.00 * mm"/>
              <zplane z="4484.25 * mm" OD="120.00 * mm"/>
            </matter>
        </additional_subtraction>
      </downstream>
    </detector>

  </detectors>


</lccdd>
