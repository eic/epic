<lccdd>
  <define>
    <constant name="BeampipeUpstreamStraightLength" value="800.0 * mm"/>
    <constant name="BeampipeDownstreamStraightLength" value="670.0 * mm"/>
    <constant name="BeampipeDownstreamHadronEnd" value="5600.0 * mm"/>

    <!-- lepton incoming beam pipe -->
    <constant name="LeptonIncomingBeampipeThickness" value="1.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_z1" value="BeampipeDownstreamStraightLength"/>
    <constant name="LeptonIncomingBeampipe_z2" value="755.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_z3" value="4300.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_z4" value="4450.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_z5" value="4460.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_z6" value="4660.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_z7" value="5100.00 * mm"/>

    <constant name="LeptonIncomingBeampipe_OD1" value="60.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_OD2" value="62.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_OD3" value="44.00 * mm"/>
    <constant name="LeptonIncomingBeampipe_OD4" value="54.00 * mm"/>

    <!-- lepton lepton outgoing beam pipe -->
    <constant name="LeptonOutgoingBeampipeThickness" value="2.00 * mm"/>
    <constant name="LeptonOutgoingBeampipe_z1" value="BeampipeUpstreamStraightLength"/>
    <constant name="LeptonOutgoingBeampipe_z2" value="5000.00 * mm"/>

    <constant name="LeptonOutgoingBeampipe_OD1" value="BeampipeOD"/>
    <constant name="LeptonOutgoingBeampipe_OD2" value="97.715 * mm"/>

    <!-- incoming hadron beam pipe -->
    <constant name="HadronIncomingBeampipeThickness" value="1.65 * mm"/>
    <!-- avoid overlap with IP beampipe by starting slightly displaced -->
    <constant name="HadronIncomingBeampipe_OD1" value="24.714 * mm"/>
    <constant name="HadronIncomingBeampipe_OD2" value="31.75 * mm"/>
    <constant name="HadronIncomingBeampipe_OD3" value="44.45 * mm"/>

    <constant name="HadronIncomingBeampipe_z1" value="BeampipeUpstreamStraightLength + 0.5 * max(BeampipeOD,HadronIncomingBeampipe_OD1) * tan(abs(CrossingAngle))"/>
    <constant name="HadronIncomingBeampipe_z2" value="2690.95 * mm"/>
    <constant name="HadronIncomingBeampipe_z3" value="2890.35 * mm"/>
    <constant name="HadronIncomingBeampipe_z4" value="2940.35 * mm"/>
    <constant name="HadronIncomingBeampipe_z5" value="5000.00 * mm"/>

    <!-- outgoing hadron beam pipe -->
    <constant name="HadronOutgoingBeampipeConeStart_z" value="870.00 * mm"/>
    <constant name="HadronOutgoingBeampipeConeEnd_z" value="5000.00 * mm"/>
    <constant name="HadronOutgoingBeampipeAxisIntersection_z" value="BeampipeDownstreamStraightLength"/>
    <constant name="HadronOutgoingBeampipeThickness" value="4.00 * mm"/>
    <constant name="HadronOutgoingBeampipe_OD" value="62.00 * mm"/>
    <constant name="HadronOutgoingBeampipe_z1" value="BeampipeDownstreamStraightLength"/>
    <constant name="HadronOutgoingBeampipe_z2" value="5100.00 * mm"/>

    <!-- addition subtraction; these are somewhat arbitrary to get the right hole shape -->
    <constant name="AdditionSubtraction_z1" value="HadronOutgoingBeampipeConeStart_z"/>
    <constant name="AdditionSubtraction_z2" value="4484.25 * mm"/>

    <constant name="AdditionSubtraction_OD1" value="36.61 * mm"/>
    <constant name="AdditionSubtraction_OD2" value="120.00 * mm"/>
    <constant name="AdditionSubtraction_OD3" value="32.00 * mm"/>
  </define>

  <display>
  </display>

  <detectors>

    <detector id="BeamPipe_ID" name="BeamPipe" type="IP6BeamPipe" vis="BeamPipeVis">
      <type_flags type="DetType_TRACKER + DetType_BEAMPIPE" />
      <beampipe/>
      <IP_pipe
        OD="BeampipeOD"
        wall_thickness="0.757*mm"
        gold_thickness="5*um"
        crossing_angle="CrossingAngle"
        upstream_straight_length="BeampipeUpstreamStraightLength"
        downstream_straight_length="BeampipeDownstreamStraightLength"
      />

      <comment> For upstream beampipe, we subtract the vacuum from the matter </comment>
      <upstream reflect="true"
                place_vacuum="true"
                subtract_vacuum="true"
                subtract_matter="false">
        <outgoing_lepton thickness="LeptonOutgoingBeampipeThickness">
          <vacuum>
            <zplane z="LeptonOutgoingBeampipe_z1" OD="LeptonOutgoingBeampipe_OD1 - 2* LeptonOutgoingBeampipeThickness"/>
            <zplane z="LeptonOutgoingBeampipe_z2" OD="LeptonOutgoingBeampipe_OD2 - 2* LeptonOutgoingBeampipeThickness"/>
          </vacuum>
          <matter>
            <zplane z="LeptonOutgoingBeampipe_z1" OD="LeptonOutgoingBeampipe_OD1"/>
            <zplane z="LeptonOutgoingBeampipe_z2" OD="LeptonOutgoingBeampipe_OD2"/>
          </matter>
        </outgoing_lepton>
        <incoming_hadron thickness="HadronIncomingBeampipeThickness"
                         crossing_angle="CrossingAngle">
          <vacuum>
            <zplane z="HadronIncomingBeampipe_z1" OD="HadronIncomingBeampipe_OD1 - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="HadronIncomingBeampipe_z2" OD="HadronIncomingBeampipe_OD2 - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="HadronIncomingBeampipe_z3" OD="HadronIncomingBeampipe_OD2 - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="HadronIncomingBeampipe_z4" OD="HadronIncomingBeampipe_OD3 - 2* HadronIncomingBeampipeThickness"/>
            <zplane z="HadronIncomingBeampipe_z5" OD="HadronIncomingBeampipe_OD3 - 2* HadronIncomingBeampipeThickness"/>
          </vacuum>
          <matter>
            <zplane z="HadronIncomingBeampipe_z1" OD="HadronIncomingBeampipe_OD1"/>
            <zplane z="HadronIncomingBeampipe_z2" OD="HadronIncomingBeampipe_OD2"/>
            <zplane z="HadronIncomingBeampipe_z3" OD="HadronIncomingBeampipe_OD2"/>
            <zplane z="HadronIncomingBeampipe_z4" OD="HadronIncomingBeampipe_OD3"/>
            <zplane z="HadronIncomingBeampipe_z5" OD="HadronIncomingBeampipe_OD3"/>
          </matter>
        </incoming_hadron>
      </upstream>

      <comment> For downstream beampipe (where on is inside the vacuum of the other), we subtract the matter from the vacuum, and subtract an additional pipe to create the angled cutout</comment>
      <downstream reflect="false"
                  place_vacuum="true"
                  subtract_vacuum="true"
                  subtract_matter="true">
        <incoming_lepton thickness="LeptonIncomingBeampipeThickness">
            <vacuum>
              <zplane z="LeptonIncomingBeampipe_z1" OD="LeptonIncomingBeampipe_OD1"/>
              <zplane z="LeptonIncomingBeampipe_z2" OD="LeptonIncomingBeampipe_OD1"/>
              <zplane z="LeptonIncomingBeampipe_z2" OD="LeptonIncomingBeampipe_OD2"/>
              <zplane z="LeptonIncomingBeampipe_z3" OD="LeptonIncomingBeampipe_OD2"/>
              <zplane z="LeptonIncomingBeampipe_z4" OD="LeptonIncomingBeampipe_OD3"/>
              <zplane z="LeptonIncomingBeampipe_z5" OD="LeptonIncomingBeampipe_OD3"/>
              <zplane z="LeptonIncomingBeampipe_z6" OD="LeptonIncomingBeampipe_OD4"/>
              <zplane z="LeptonIncomingBeampipe_z7" OD="LeptonIncomingBeampipe_OD4"/>
            </vacuum>
            <matter>
              <zplane z="LeptonIncomingBeampipe_z1" OD="LeptonIncomingBeampipe_OD2 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z1 + LeptonIncomingBeampipeThickness" OD="LeptonIncomingBeampipe_OD2 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z1 + LeptonIncomingBeampipeThickness" OD="LeptonIncomingBeampipe_OD1 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z2 + LeptonIncomingBeampipeThickness" OD="LeptonIncomingBeampipe_OD1 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z2 + LeptonIncomingBeampipeThickness" OD="LeptonIncomingBeampipe_OD2 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z3" OD="LeptonIncomingBeampipe_OD2 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z4" OD="LeptonIncomingBeampipe_OD3 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z5" OD="LeptonIncomingBeampipe_OD3 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z6" OD="LeptonIncomingBeampipe_OD4 + 2* LeptonIncomingBeampipeThickness"/>
              <zplane z="LeptonIncomingBeampipe_z7" OD="LeptonIncomingBeampipe_OD4 + 2* LeptonIncomingBeampipeThickness"/>
            </matter>
        </incoming_lepton>
        <outgoing_hadron thickness="HadronOutgoingBeampipeThickness"
                         axis_intersection="HadronOutgoingBeampipeAxisIntersection_z"
                         horizontal_offset="15.0 * mm"
                         cone_z_end="HadronOutgoingBeampipeConeEnd_z"
                         cone_z_start="HadronOutgoingBeampipeConeStart_z"
                         extension_r="27.5 * mm"
                         extension_z="BeampipeDownstreamHadronEnd - HadronOutgoingBeampipeConeEnd_z"
                         extension_thickness="HadronIncomingBeampipeThickness"
                         crossing_angle="CrossingAngle">
            <vacuum>
              <zplane z="HadronOutgoingBeampipe_z1" OD="HadronOutgoingBeampipe_OD"/>
              <zplane z="HadronOutgoingBeampipe_z2" OD="HadronOutgoingBeampipe_OD + 2* (HadronOutgoingBeampipe_z2 - HadronOutgoingBeampipe_z1) * tan(abs(CrossingAngle))"/>
            </vacuum>
            <matter>
              <zplane z="HadronOutgoingBeampipe_z1" OD="HadronOutgoingBeampipe_OD + 2* HadronOutgoingBeampipeThickness"/>
              <zplane z="HadronOutgoingBeampipe_z2" OD="HadronOutgoingBeampipe_OD + 2* (HadronOutgoingBeampipe_z2 - HadronOutgoingBeampipe_z1) * tan(abs(CrossingAngle)) + 2* HadronOutgoingBeampipeThickness"/>
            </matter>
        </outgoing_hadron>
        <additional_subtraction thickness="HadronOutgoingBeampipeThickness"
                                crossing_angle="CrossingAngle">
            <vacuum>
              <zplane z="AdditionSubtraction_z1" OD="AdditionSubtraction_OD1 - 2* HadronOutgoingBeampipeThickness"/>
              <zplane z="AdditionSubtraction_z2" OD="AdditionSubtraction_OD2 - 2* HadronOutgoingBeampipeThickness"/>
            </vacuum>
            <matter>
              <zplane z="BeampipeDownstreamStraightLength" OD="AdditionSubtraction_OD3 * mm"/>
              <zplane z="AdditionSubtraction_z2" OD="AdditionSubtraction_OD2 * mm"/>
            </matter>
        </additional_subtraction>
      </downstream>
    </detector>

  </detectors>


</lccdd>
