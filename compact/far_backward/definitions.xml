    <!-- Tagger1 position semantics: X,Z below are START (negative end) of vacuum length.
         Local (beamline) coordinates rotated into global using standard matrix:
           Xg = X0 + Xloc*cos(theta) - Zloc*sin(theta)
           Zg = Z0 + Xloc*sin(theta) + Zloc*cos(theta)
         End and center helper constants added for downstream use. -->
    <!-- Standard right-handed rotation about Y: Xg = X0 + Xloc*cos + Zloc*sin ; Zg = Z0 - Xloc*sin + Zloc*cos -->
    <constant name="Tagger1_StartX"       value="Dipole_Focus_X + Tagger1_Offset_X*cos(Tagger1_Theta) + Tagger1_Offset_Z*sin(Tagger1_Theta)"/>
    <constant name="Tagger1_StartZ"       value="Dipole_Focus_Z - Tagger1_Offset_X*sin(Tagger1_Theta) + Tagger1_Offset_Z*cos(Tagger1_Theta)"/>
    <constant name="Tagger1_CenterX"      value="Tagger1_StartX - 0.5*Tagger1_Vac_Length*sin(Tagger1_Theta)"/>
    <constant name="Tagger1_CenterZ"      value="Tagger1_StartZ - 0.5*Tagger1_Vac_Length*cos(Tagger1_Theta)"/>
    <constant name="Tagger1_EndX"         value="Tagger1_StartX - Tagger1_Vac_Length*sin(Tagger1_Theta)"/>
    <constant name="Tagger1_EndZ"         value="Tagger1_StartZ - Tagger1_Vac_Length*cos(Tagger1_Theta)"/>
    <!-- Backward-compatible names (Tagger1_X/Z/Y) map to start. -->
