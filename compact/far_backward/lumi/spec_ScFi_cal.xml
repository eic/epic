<lccdd>
        <!--EcalLumiSpec - ELS
        Note : Values/Notations for making modules pointing along z-axis.
               Rotation of modules wrt XY axis after construction.          -->

        <materials>
        <material name="BrassAlloy360">
                <D type="density" unit="g/cm3" value="8.49"/>
                <fraction n="0.6045" ref="Cu"/>
                <fraction n="0.3550" ref="Zn"/>
                <fraction n="0.0370" ref="Pb"/>
                <fraction n="0.0035" ref="Fe"/>
        </material>
        <material name="WPowderplusEpoxy">
                <D type="density" unit="g/cm3" value="10.95"/>
                <fraction n="0.97" ref="Tungsten"/>
                <fraction n="0.03" ref="Epoxy"/>
        </material>
        </materials>

        <display>
                <vis    name="ELS_ModuleVis"            ref="AnlGold"   alpha="0.5"     visible="true" showDaughters="true"/>
                <vis    name="ELS_FiberVis"             ref="AnlRed"    aplha="0.8"     visible="true"/>
                <vis    name="ELS_FiberHolderVis"       ref="AnlBlue"   alpha="1.0"     visible="true"/>
        </display>

        <detectors>
                <detector id="LumiSpecCAL_ID" name="LumiSpecCAL" type="EcalLumiSpecWScFi" vis="FFPreVis" readout="EcalLumiSpecHits" sizeXY="ELS_CALSizeXY" sizeZ="ELS_CALSizeZ" >
                        <module sizex="ELS_CALModSizeX" sizey="ELS_CALModSizeY" sizez="ELS_CALModSizeZ" nmod_perlayer="ELS_XYLayers" nlayer="ELS_ZLayers" material="WPowderplusEpoxy" vis="ELS_ModuleVis">
                                <fiber material="Polystyrene"
                                        radius="ELS_FiberRadius"
                                        spacex="ELS_FiberSpaceX"
                                        spacey="ELS_FiberSpaceY"
                                        vis="ELS_FiberVis"/>
                                <fiberholder material="BrassAlloy360" vis="ELS_FiberHolderVis"/>
                        </module>
                        <sector id="0">
                                <position x="0.0*cm" y="ELS_CALPosY" z="ELS_CALPosZ"/>
                                <rotation x="0.0*rad" y="0.0*rad" z="0.0*rad"/>
                        </sector>
                        <sector id="1">
                                <position x="0.0*cm" y="-1*ELS_CALPosY" z="ELS_CALPosZ"/>
                                <rotation x="0.0*rad" y="0.0*rad" z="0.0*rad"/>
                        </sector>
                </detector>
        </detectors>

        <readouts>
                <readout name="EcalLumiSpecHits">
                        <segmentation type="NoSegmentation"/>
                        <id>system:8,sector:4,module:8,fiber_x:16,fiber_y:16</id>
                </readout>
        </readouts>

</lccdd>
