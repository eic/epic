<lccdd>
 <detectors>
    <detector
      id="LumiDirectPCAL_ID"
      name="LumiDirectPCAL"
      type="LumiDirectPCAL"
      material="PbWO4"
      vis="EcalVis"
      readout="LumiDirectPCALHits"> <!-- 0.5*m added to make room for WScFi CAL as DPD -->
      <dimensions x="LumiDirect_XY/2" y="LumiDirect_XY/2" z="LumiDirect_DZ/2" />
      <position   x="0" y="0" z="0.5*m + LumiDirect_Z - LumiDirect_DZ/2" />
      <rotation   x="0*rad" y="0*rad" z="0*rad" />
    </detector>
  </detectors>

  <readouts>
    <readout name="LumiDirectPCALHits">
      <segmentation type="NoSegmentation"/>
      <id>system:8</id>
    </readout>
  </readouts>


</lccdd>
