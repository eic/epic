      HCal Vis
    </comment>
    <vis name="HcalVis"               ref="AnlBlue"   showDaughters="true"  visible="true"/>
    <vis name="HcalBarrelVis"         ref="AnlBlue"   showDaughters="true"  visible="true"/>
