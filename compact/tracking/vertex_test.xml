<lccdd>
  <info name="barrel_frame" title="Half Cylinder Barrel Frame"/>

  <define>
    <constant name="r1" value="100*mm"/>
    <constant name="r2" value="150*mm"/>
    <constant name="barrel_length" value="200*mm"/>
    <constant name="frame_width" value="10*mm"/>
  </define>

  <materials>
    <material name="Aluminum" formula="Al">
      <D value="2.70" unit="g/cm3"/>
      <composite n="1" ref="Al"/>
    </material>
  </materials>

  <solids>
    <tube name="half_barrel"
          rmin="r1"
          rmax="r2"
          dz="barrel_length/2"
          startphi="0*deg"
          deltaphi="180*deg"/>

    <tube name="inner_cutout"
          rmin="r1"
          rmax="r2"
          dz="(barrel_length-2*frame_width)/2"
          startphi="frame_width*deg/r1"
          deltaphi="(180*deg - 2*frame_width*deg/r1)"/>

    <subtraction name="barrel_frame">
      <first ref="half_barrel"/>
      <second ref="inner_cutout"/>
      <position x="0" y="0" z="0"/>
    </subtraction>
  </solids>


</lccdd>
