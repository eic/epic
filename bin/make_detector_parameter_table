#!/usr/bin/env python3

import os
import glob
import toml
import jinja2

# template
env = jinja2.Environment(
    loader = jinja2.FileSystemLoader('templates'),
)
template = env.get_template('DetectorParameterTable.csv.jinja2')

# detector constants
constants = toml.load('doc/constants.toml')

# render the template
print(template.render(**constants))
with open('temp_detector_parameter_table.csv', 'w') as f:
    f.write(template.render(**constants))
